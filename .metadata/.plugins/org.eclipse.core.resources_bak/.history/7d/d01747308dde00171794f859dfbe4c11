package Game;

import java.awt.Color;
import java.awt.Graphics2D;
import java.util.Random;

public class Player {

	private double x, y;
	private Color color;
	
	private boolean makeHole = false;
	private long timeHoleMake = 0;
	
	private double dx;
	private double dy;
	private double rad;
	private double speed;
	private double angle = 0;
	public boolean left;
	public boolean right;
	private double angleMove;
	private double normalSpeed;
	private double size = 10;
	private Main main;
	
	public Player(double x, double y, Main main) {
		this.x = x;
		this.y = y;
		color = Color.green;
		normalSpeed = 3;
		angleMove = 2;
		this.main = main;
	}
	
	public void tick() {
		if(colliding()) {
			//System.out.println("Colliding");
		}
		if(KeyInput.isPressingLeft) angle-=angleMove+normalSpeed/3;
		if(KeyInput.isPressingRight) angle+=angleMove+normalSpeed/3;
		
		speed = normalSpeed;
		
		rad = Math.toRadians(angle);
		dx = Math.cos(rad) * speed;
		dy = Math.sin(rad) * speed;
		
		x += dx;
		y += dy;
		
		if(new Random().nextInt(300) == 1 && !makeHole && main.isStartedDrawing()) {
			makeHole = true;
			timeHoleMake = System.currentTimeMillis();
			System.out.println("Make Hole");
		}
		
		if(makeHole) {
			if(System.currentTimeMillis()-timeHoleMake > 100 + (size*10)) {
				makeHole = false;
			}
		}
	}
	
	private boolean colliding() {
		boolean rgw = false;
		Color pixelColor = new Color(main.getBiMap().getRGB((int)x, (int)y));
		if(pixelColor != color && pixelColor != new Color(0,0,0)) {
			rgw = true;
		}
		return rgw;
	}
	
	public void render(Graphics2D g) {
		if(main.isStartedDrawing() && !makeHole) {
			g = main.getBiMap().createGraphics();
		}
		g.setColor(color);
		g.fillOval((int)(x-size/2), (int)(y-size/2), (int)size, (int)size);
		
		g.setColor(Color.pink);
		g.fillOval((int)(x+dx*size), (int)(y+dy*(size/2)), 2, 2);
	}
}
